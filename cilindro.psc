Algoritmo cilindro
	Escribir "Escriba el radio del cilindro"
	Leer r
	Escribir "Escriba la altura del cilindro"
	Leer h
	a = 2*PI*r*h
	b = 2*PI*r*r
	suma = a+b
	Escribir "La área del cilindro es: ", suma, " cm2"
	c = PI*r*r*h
	Escribir "El volumen del cilindro es: ", c, "cm3"
FinAlgoritmo
